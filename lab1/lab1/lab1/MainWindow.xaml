<Window x:Class="lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel  Grid.Column="0" HorizontalAlignment="Left" Width="100">
            <TextBox x:Name="inputPointsAmount" Margin="0,20" Width="100">

            </TextBox>
            <TextBox x:Name="inputClastersAmount" Margin="0,20" Width="100">

            </TextBox>


            <Button Content="Нажми" Width="100" x:Name="btnConfirm" Click="btnConfirm_Click"/>

        </StackPanel>


        <UniformGrid x:Name="ugridForClasters" Background="AliceBlue" HorizontalAlignment="Left" Width="694" Grid.ColumnSpan="3" Margin="106,0,0,0">
            <Canvas Margin="0,0,0,-70" Background="White">
                <Canvas Width="260" Height="260" x:Name="cnvFirstClaster" Canvas.Left="10" Canvas.Top="10"/>

            </Canvas>
            <Canvas Margin="0,0,0,-70" Background="White">
                <Canvas Width="260" Height="260" x:Name="cnvSecondClaster" Canvas.Left="10" Canvas.Top="10"/>
            </Canvas>
        </UniformGrid>
    </Grid>
</Window>
